<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.fragment.FriendFragment"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:background="@color/white">

    <TextView
            android:id="@+id/search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search"
            android:gravity="center_vertical"
            android:layout_margin="20dp"
            android:padding="15dp"
            android:background="@drawable/shape_search_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:drawableStartCompat="@drawable/icon_search" />

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/search_box"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="0dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/item_friend_list"
                    android:layout_marginTop="20dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="@color/unselected"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
                android:layout_marginStart="20dp"
                android:id="@+id/iv_map"
                android:layout_width="0dp"
                android:scaleType="centerInside"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/icon_map_normal" />

        <ImageView
                android:id="@+id/iv_friend"
                android:layout_width="0dp"
                android:scaleType="centerInside"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/icon_contacts_filled" />

        <ImageView
                android:id="@+id/iv_write"
                android:layout_width="0dp"
                android:scaleType="centerInside"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/icon_plus_normal" />

        <ImageView
                android:id="@+id/iv_message"
                android:layout_width="0dp"
                android:scaleType="centerInside"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/icon_message_normal" />

        <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="0dp"
                android:scaleType="centerInside"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginEnd="20dp"
                android:src="@drawable/icon_profile_normal" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="80dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
