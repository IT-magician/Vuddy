<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/friend_accept_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_alarm_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/man"
        app:civ_border_color="#A286DB"
        app:civ_border_overlay="true"
        app:civ_border_width="5dp"/>

        <TextView
            android:id="@+id/friend_alarm_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nickname"
            android:layout_margin="15dp"
            app:layout_constraintStart_toEndOf="@+id/friend_alarm_image" />
    </LinearLayout>

    <Button
        android:id="@+id/friend_accept_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:background="@drawable/alarmbutton_custom"
        android:text="수락"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/friend_refuse_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/friend_accept_box"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/friend_refuse_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/alarmbutton_custom_red"
        android:text="거절"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
