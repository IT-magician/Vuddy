<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_alarm_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bird"
            app:civ_border_color="#A286DB"
            app:civ_border_overlay="true"
            app:civ_border_width="5dp" />

    <TextView
            android:id="@+id/friend_alarm_nickname"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="가나다라마"
            android:fontFamily="@font/pretendard"
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:layout_gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@+id/friend_alarm_image" />

    <Button
            android:id="@+id/friend_accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/pretendard"
            android:background="@drawable/shape_btn"
            android:backgroundTint="@color/selected"
            android:text="수락"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_weight="1" />

    <Button
            android:id="@+id/friend_refuse_btn"
            android:layout_width="wrap_content"
            android:fontFamily="@font/pretendard"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn"
            android:backgroundTint="@color/error"
            android:text="거절"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_weight="1" />

</LinearLayout>
